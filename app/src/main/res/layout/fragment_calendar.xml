<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/month_year"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/white"
        android:fontFamily="@font/segoe_ui"
        android:background="@color/black"
        android:textSize="25dp">
    </TextView>

    <com.github.sundeepk.compactcalendarview.CompactCalendarView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/monthly_calendar_view"
        android:layout_width="fill_parent"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_height="250dp"
        app:compactCalendarTargetHeight="250dp"
        app:compactCalendarTextSize="12sp"
        app:compactCalendarBackgroundColor="@color/black"
        app:compactCalendarTextColor="@color/white"
        app:compactCalendarCurrentSelectedDayBackgroundColor="@color/red"
        app:compactCalendarCurrentDayBackgroundColor="#B71C1C"
        app:compactCalendarMultiEventIndicatorColor="#fff">
    </com.github.sundeepk.compactcalendarview.CompactCalendarView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/assignment_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/black">
    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>